<p id="notice"><%= notice %></p>

<h1>Listing Purchase Historics</h1>
<h1>balanco do caixa: <%= @purchase_historics.sum(:value_of_sell)%></h1>

<table id="table" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>Client</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Createdate</th>
      <th>Paidstatus</th>
      <th>Discount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_historics.each do |purchase_historic| %>
      <tr>
        <td><%= purchase_historic.id %></td>
        <td><%= purchase_historic.client.name %></td>
        <td><%= purchase_historic.product.name %></td>
        <td><%= purchase_historic.quantity %></td>
        <td><%= purchase_historic.createDate %></td>
        <td><%= purchase_historic.paidStatus %></td>
        <td><%= purchase_historic.discount %></td>
        <td><%= link_to 'Show', purchase_historic %></td>
        <td><%= link_to 'Edit', edit_purchase_historic_path(purchase_historic) %></td>
        <td><%= link_to 'Destroy', purchase_historic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

