<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'View list', clients_path %></li>
  <li><%= link_to 'New Client', new_client_path %></li>
</ul>

<p id="notice"><%= notice %></p>

<h1>Listing Clients</h1>

<table>
<table id="table" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Login</th>
          <th>Password</th>
          <th>Email</th>
          <th>Cpf</th>
          <th>Rg</th>
          <th>Createdate</th>
          <th>Updatedate</th>
          <th>Comments</th>
        </tr>
    </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.id %></td>
        <td><%= client.name %></td>
        <td><%= client.login %></td>
        <td><%= client.password %></td>
        <td><%= client.email %></td>
        <td><%= client.cpf %></td>
        <td><%= client.rg %></td>
        <td><%= client.createDate %></td>
        <td><%= client.updateDate %></td>
        <td><%= client.comments %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </tbody>
<% end %>
</table>

